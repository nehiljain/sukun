# Django Settings
DEBUG=1
ENV=dev
DJANGO_SETTINGS_MODULE=settings
DJANGO_SECRET_KEY=django-insecure-example-key-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
EXPOSE_BROWSABLE_API=false

# Database Configuration
PROJECT_NAME=gestral
VITE_PROJECT_NAME=Gestral
POSTGRES_HOST=db
POSTGRES_USERNAME=postgres
POSTGRES_PASSWORD=your-database-password
POSTGRES_DATABASE=${PROJECT_NAME}
POSTGRES_PORT=5432
APP_DATABASE_URL=postgresql://${POSTGRES_USERNAME}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DATABASE}

# Celery Configuration
CELERY_RESULT_BACKEND_DB=db+postgresql://${POSTGRES_USERNAME}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DATABASE}
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_TASK_DEFAULT_QUEUE=render-queue

# Deployment Configuration
SSH_DEPLOYMENT_USERNAME=your-ssh-username
SSH_DEPLOYMENT_HOST=your-deployment-host

# OAuth Settings
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://127.0.0.1:8000/auth/google/callback

# API Keys
RESEND_API_KEY=your_resend_api_key

# Stripe Configuration
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_BILLING_PAGE_URL=your_stripe_billing_url
WEBHOOK_SIGNING_SECRET=your_webhook_secret

# Copilot Configuration
NEXT_PUBLIC_COPILOT_CLOUD_PUBLIC_API_KEY=your_copilot_api_key

# Application Settings
SITE_URL=http://127.0.0.1:8000
USE_FC_CACHE=false

# Storage Configuration
STORAGE_BACKEND=s3

# AWS S3 Configuration (if using S3)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_STORAGE_BUCKET_NAME=your_public_bucket_name
AWS_STORAGE_PRIVATE_BUCKET_NAME=your_private_bucket_name
AWS_REGION=us-west-1

# CDN Configuration
CDN_BASE_URL=https://your-cdn-domain.com

# Feature Flags
LOCAL_PROCESSING=false
ADMIN_EMAILS=your-admin@email.com
VITE_CONTACT_EMAIL=your-admin@email.com
EXPOSE_BROWSABLE_API=true

# Embedding Service Configuration
EMBEDDING_SERVICE_TYPE=local
LOCAL_EMBEDDING_ENDPOINT=http://localhost:1234

# Runtime Configuration
PYTHONUNBUFFERED=1
RUNTIME=docker

# Docker Configuration
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1
