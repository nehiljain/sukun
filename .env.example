# Django Settings
DEBUG=1
DJANGO_SETTINGS_MODULE=settings
SECRET_KEY=django-insecure-example-key-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
EXPOSE_BROWSABLE_API=false

# Database Configuration (Docker)
PROJECT_NAME=gestral
POSTGRES_HOST=127.0.0.1
POSTGRES_USERNAME=postgres
POSTGRES_PASSWORD=very-complex-passwOrd
POSTGRES_DATABASE=${PROJECT_NAME}
POSTGRES_PORT=5433
APP_DATABASE_URL=postgresql://${POSTGRES_USERNAME}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DATABASE}

# Runtime Configuration
PYTHONUNBUFFERED=1
RUNTIME=docker

# OAuth Settings
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REDIRECT_URI=http://localhost:8000/auth/github/callback

GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# API Keys
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
E2B_API_KEY=your_e2b_api_key
FIREWORKS_API_KEY=your_fireworks_api_key
SERPER_API_KEY=your_serper_api_key
FIRECRAWL_API_KEY=your_firecrawl_api_key
RESEND_API_KEY=your_resend_api_key
LUMAAI_API_KEY=your_lumaai_api_key

# LangChain Configuration
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your_langchain_api_key
LANGCHAIN_PROJECT=your_project_name
LANGSMITH_API_KEY=your_langsmith_api_key

# Storage Configuration
STORAGE_BACKEND=gcs
GCS_BUCKET_NAME=your-bucket-name
GCS_CREDENTIALS_PATH=gcs-credentials.json

# AWS S3 Configuration (if using S3)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_STORAGE_BUCKET_NAME=your_bucket_name
AWS_REGION=your_aws_region

# Stripe Configuration
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_BILLING_PAGE_URL=your_stripe_billing_url
WEBHOOK_SIGNING_SECRET=your_webhook_secret

# Application Settings
SITE_URL=http://localhost:8001
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8001
USE_FC_CACHE=false

# Feature Flags
ENABLE_CACHING=true
ENABLE_SIGNALING=false
LOCAL_PROCESSING=true
ENVIRONMENT=dev
ADMIN_EMAILS=selvam@demodrive.tech

# Docker Configuration
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# Deployment (production only)
SSH_DEPLOYMENT_USERNAME=
SSH_DEPLOYMENT_HOST=
